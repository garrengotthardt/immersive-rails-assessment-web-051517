<h1>Episode on <%= @episode.date %></h1>

<h3>Guests</h3>
  <% if @episode.guests.count > 0 %>
    <ul>
      <% @episode.guests.each do |guest|%>
      <li>
        <%= link_to guest.name, guest_path(guest) %>
      </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      This episode does not have any guests added to it yet
    </p>

    <%end%>
    <p>
      <%= link_to "Create New Appearance", '/appearances/new' %>
    </p>
